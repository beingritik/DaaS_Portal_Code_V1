<html>
    <head>
        <%- include('../common/cdn') %>
        <title>L&T DCCS Portal</title>
        <link rel="stylesheet" href="/css/login.css">
    </head>

<div class="login">
    <div class = "container h-custom">
        <div class="row align-items-center">
            
            <div class="col-md-9 col-lg-6 col-xl-5 align-items-center">
                <img src="/images/1032.jpg"
                  class="img-fluid" alt="Sample image">
            </div>
            
            <div class="col-lg-6 col-xl-5 flex  shadow formBanner ">
                <div class="imgheading row justify-content-center">
                    <div class="col-2 g-1">
                        <img src = '/images/favicon.png'  class="logoimgheading" alt = "mnksd">
                    </div>
                    <div class="col-8 g-1">
                        <h2 class="text-center imgheading">LnT DCCS Portal</h2>   
                    </div>
                </div>

                <form class = "formClass" name="loginform" action="/login" method="post"  onsubmit="return validateForm()">
                    <!-- Username Input -->

                    <% if (!flag) {%>
                        <div class="text-center">
                            <span class="alert-danger text-center ferror">Invalid credantials</span>
                        </div>
                    <% } %>
                    <div class = 'form-outline mb-4' id="uname">
                        <label class="form-label" for = "uname"> <b>Username</b></label>
                        <input type = 'text' class="form-control form-control-lg" name="username" placeholder="Enter Username" oninput="return validateUserName()">
                        <span class="ferror"></span>
                    </div>
                    <!-- Password Field -->
                    <div class="form-outline mb-4" id="pass">
                        <label class="form-label" for="pass"><b>Password</b></label>
                        <input type="password" name = "password" class="form-control form-control-lg" placeholder="Enter password" oninput="return validateUserPassword()">
                        <span class="ferror"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" value = "login" class="loginButton">Login</button>
                    </div>

                </form>
            </div>         
        </div>
    </div>    
</div>
<script src="/js/login.js"></script>

